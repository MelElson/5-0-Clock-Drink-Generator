                    <label for="search-form">Search for a drink:</label>
                    <input class="form-input" type="text" id="homepage-search" />
                    <button type="submit" class="btn btn-primary mb-2" id="search-btn">search</button>
                    </div>
                    {{else}}
                    <p class="lead">Sign up or login to get started.</p>
                    <div class="form-check mb-2 mr-sm-2"></div>
                    <a href="/login" type="submit" class="btn btn-primary mb-2">Sign-up/Login</a>
                    {{/if}}
            
        </div>


